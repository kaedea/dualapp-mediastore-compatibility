<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:gravity="top"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:onClick="onSendImagesUri"
            android:text="Send Images Uri"
            android:textSize="10sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:onClick="onSendDownloadsImageUri"
                android:text="Send Downloads-IMG Uri"
                android:textSize="10sp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:onClick="onSendDownloadsDocumentUri"
                android:text="Send Downloads-DOC Uri"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginRight="5dp"

                android:layout_weight="1"
                android:onClick="onSendFilesImageUri"
                android:text="Send Files-IMG Uri"
                android:textSize="10sp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="5dp"

                android:layout_weight="1"
                android:onClick="onSendFilesDocumentUri"
                android:text="Send Files-DOC Uri"
                android:textSize="10sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:onClick="onSendFileProviderImageUri"
                android:text="Send FileProvider Image"
                android:textSize="10sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:onClick="onSendFileProviderDocumentUri"
                android:text="Send FileProvider File"
                android:textSize="10sp" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_bottom"
        android:layout_margin="5dp"
        android:background="#ccc"
        android:gravity="center"
        android:orientation="horizontal"
        android:scrollbars="vertical"
        android:textAlignment="textStart" />
</RelativeLayout>
